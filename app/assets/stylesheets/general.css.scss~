@mixin setbackground($F_color, $S_color){
  background: $F_color;
  background-image: -webkit-gradient(linear, left top, left bottom, from($F_color), to(S_color));
  background-image: -webkit-linear-gradient(top, $F_color, S_color);
  background-image: -moz-linear-gradient(top, $F_color, S_color);
  background-image: -ms-linear-gradient(top, $F_color, S_color);
  background-image: -o-linear-gradient(top, $F_color, S_color);
  background-image: linear-gradient(top, $F_color, S_color);  
}

@mixin setcorners($TL, $TR, $BL, $BR){
  border-top-left-radius:$TL;
  border-top-right-radius:$TR;
  border-bottom-left-radius:$BL;
  border-bottom-right-radius:$BR;
}


